{
	"info": {
		"name": "Error Response Validation - Pre-Build",
		"description": "Validates error response structures, HTTP status codes, and error message formats. Tests OWASP ERR-001 and ERR-004. These tests run before build using mock error response data (no HTTP requests).",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "400 Bad Request Errors",
			"item": [
				{
					"name": "Validation Error - Missing Required Fields",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Mock 400 error response",
									"const mockErrorResponse = {",
									"  code: 400,",
									"  status: 'Bad Request',",
									"  body: JSON.stringify({",
									"    error: 'Validation failed',",
									"    message: 'Missing required fields',",
									"    details: ['firstName is required', 'email is required']",
									"  })",
									"};",
									"",
									"const errorBody = JSON.parse(mockErrorResponse.body);",
									"",
									"pm.test('Status 400', () => {",
									"  pm.expect(mockErrorResponse.code).to.equal(400);",
									"});",
									"",
									"pm.test('Error response structure valid', () => {",
									"  pm.expect(errorBody).to.have.property('error');",
									"  pm.expect(errorBody).to.have.property('message');",
									"});",
									"",
									"pm.test('ðŸ”’ OWASP ERR-001: Generic error message without internals', () => {",
									"  pm.expect(errorBody.message).to.not.include('password');",
									"  pm.expect(errorBody.message).to.not.include('hash');",
									"  pm.expect(errorBody.message).to.not.include('database');",
									"  pm.expect(errorBody.message).to.not.include('SQL');",
									"});",
									"",
									"pm.test('ðŸ”’ OWASP ERR-004: Appropriate HTTP status code', () => {",
									"  pm.expect(mockErrorResponse.code).to.equal(400);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"testuser\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "register"]
						}
					}
				},
