									"pm.test('Error message is generic', () => {",
									"  pm.expect(errorBody.message).to.be.a('string');",
									"  pm.expect(errorBody.message.length).to.be.greaterThan(0);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
